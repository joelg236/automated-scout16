extends layout

block content
    .container
        table.table.sortable
            thead
                tr
                    th Team
                    th Max OPR
                    th Average OPR
                    th Max CCWM
                    th Average CCWM
                tbody
                    each team in data.teams
                        - var teamnumber = team.substring(3)
                        - function avg(arr) {
                        -     return arr.reduce(function (p, c) {
                        -         return p + c;
                        -     }, 0) / arr.length;
                        - }
                        tr
                            td
                                a(href="/team/#{teamnumber}/#{year}/#{id}") #{teamnumber}
                            td= Math.max.apply(null, data.OPRs[team]).toFixed(2)
                            td= avg(data.OPRs[team]).toFixed(2)
                            td= Math.max.apply(null, data.CCWMs[team]).toFixed(2)
                            td= avg(data.CCWMs[team]).toFixed(2)
